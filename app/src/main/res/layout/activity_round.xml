<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.ares.xq.baselibrary.view.roundview.RoundImageView
        android:id="@+id/round_imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/head_img"
        app:border_color="#ff0000"
        app:border_width="2dp"
        app:circle="true" />

    <com.ares.xq.baselibrary.view.roundview.RoundImageView
        android:id="@+id/round_imageview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/head_img2"
        app:border_color="#00000000"
        app:border_width="0dp"
        app:circle="true" />

</LinearLayout>
